# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
ZSH_THEME="robbyrussell"

# Variables
export SSH_PUBLIC=$HOME/.ssh/id_rsa.pub

export GOPATH=/opt/src/go
export GO_BINPATH=$GOPATH/bin
#export AWS_PATH=/opt/aws/bin
export LOCAL_NODE_PATH=$HOME/.node/bin
export MACPORTS_PATH=/opt/local/bin:/opt/local/libexec/gnubin
export USERBINS_PATH=$HOME/.local/bin:/opt/bin

export PATH=$USERBINS_PATH:$MACPORTS_PATH:$AWS_PATH:$LOCAL_NODE_PATH:$GO_BINPATH:$PATH

export EDITOR='atom --wait'

fpath=(~/.dotfiles/lib $fpath)
#autoload all of our local functions
autoload -- ~/.dotfiles/lib/[^_]*(:t)

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
alias sport='sudo /opt/local/bin/port -ucpv'

alias ls='ls --color=auto --human-readable'
alias setfile='SetFile'
alias firefox='/Applications/Firefox.app/Contents/MacOS/firefox-bin'
alias psx='ps -axwwr -o pid,user,%cpu,%mem,rss,state,start,command'
alias unsafe_chrome='open /Applications/Google\ Chrome.app/ --args --allow-file-access-from-files -â€“disable-web-security'
alias svn16='/usr/bin/svn'

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...

# OPAM configuration
. /Users/meander/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true

# PerlBrew configuration
source ~/.perl5/etc/bashrc
perlbrew use 5.20.2

# RVM
source /Users/meander/.rvm/scripts/rvm

#THIS MUST BE AT THE END OF THE FILE FOR GVM TO WORK!!!
[[ -s "/Users/meander/.gvm/bin/gvm-init.sh" ]] && source "/Users/meander/.gvm/bin/gvm-init.sh"
